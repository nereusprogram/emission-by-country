div#contentWrapper(ng-controller='GraphController as graphCtrl')
    div.row
        div.col-sm-6.btn-group
                button.btn.btn-info.dropdown-toggle(type='button', id='dropdownMenuButton', data-toggle='dropdown') Countries
                    span.caret
                div.dropdown-menu
                    a.dropdown-item(href='{{country}}', ng-repeat='country in mainCtrl.countries track by $index') {{ country }}

        div.col-sm-6.graph-wrapper {{graphCtrl.tagline}}

    div.row
        div.col-sm-6
            high-chart-directive(update-selected-country='graphCtrl.updateSelectedCountry(newCountry)')
        div.col-sm-6
            div.row
                div.col-sm-12 D3 Graph
                    d3-directive(data='graphCtrl.matchingDataFromDBWorld', label='name', on-click='graphCtrl.d3OnClick(item)')
            div.row
                div.col-sm-12
                    d3-directive(data='graphCtrl.matchingDataFromDB', label='propertyName', on-click='graphCtrl.d3OnClick(item)')
            div.row
                div.col-sm-6 {{graphCtrl.selectedCountry}}
                div.col-sm-6 Matching Data from DB {{graphCtrl.matchingDataFromDB}}